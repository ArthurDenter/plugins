{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "create-block/hero-block",
	"version": "0.1.0",
	"title": "Hero-Block",
	"category": "widgets",
	"icon": "smiley",
	"description": "Block for displaying a hero image with text overlay.",
	"example": {},
	"supports": {
		"html": false,
		"align": ["wide"]
	},
	"attributes": {
		"layout_variant": {
			"type": "string",
			"default": "text-left"
		},
		"image_id": {
			"type": "number"
		},
		"image_url": {
			"type": "string"
		},
		"head": {
			"type": "string"
		},
		"body": {
			"type": "string"
		},
		"link": {
			"type": "object",
			"default": {
				"title": "mehr erfahren"
			}
		}
	},
	"textdomain": "hero-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js"
}
